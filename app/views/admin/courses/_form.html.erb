<%= form_with(model: [:admin, course], class: "contents") do |form| %>
  <div class="flex flex-col mb-4">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'text-gray-500' %>

    <%= form.label :description %>
    <%= form.text_area :description, class: 'text-gray-500' %>
    
    <%= form.label :price %>
    <%= form.number_field :price, class: 'text-gray-500' %>
  </div>
  
  <% if course.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>
      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
