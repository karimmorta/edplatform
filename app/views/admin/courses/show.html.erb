<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @course %>

    <%= link_to 'Edit this course', edit_admin_course_path(@course), class: "mt-2 rounded-lg py-3 px-5 bg-blue-400 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this course', admin_course_path(@course), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-red-400 font-medium" %>
    </div>
    <%= link_to 'Back to courses', admin_courses_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-400 inline-block font-medium" %>
  </div>
</div>
